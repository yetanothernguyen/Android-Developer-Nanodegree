<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Nanodegree Apps!"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:background="@color/primary"
        android:textColor="@color/primary_text_default_material_dark"
        android:layout_width="@dimen/large_button_width"
        android:layout_height="@dimen/large_button_height"
        android:text="Spotify Streamer"
        android:id="@+id/btn_spotify"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"/>

    <Button
        android:background="@color/primary"
        android:textColor="@color/primary_text_default_material_dark"
        android:layout_width="@dimen/large_button_width"
        android:layout_height="@dimen/large_button_height"
        android:text="Scores App"
        android:id="@+id/btn_scores"
        android:layout_below="@+id/btn_spotify"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>

    <Button
        android:background="@color/primary"
        android:textColor="@color/primary_text_default_material_dark"
        android:layout_width="@dimen/large_button_width"
        android:layout_height="@dimen/large_button_height"
        android:text="Library App"
        android:id="@+id/btn_library"
        android:layout_below="@+id/btn_scores"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>

    <Button
        android:background="@color/primary"
        android:textColor="@color/primary_text_default_material_dark"
        android:layout_width="@dimen/large_button_width"
        android:layout_height="@dimen/large_button_height"
        android:text="Build It Bigger"
        android:id="@+id/btn_buildit"
        android:layout_below="@+id/btn_library"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>

    <Button
        android:background="@color/primary"
        android:textColor="@color/primary_text_default_material_dark"
        android:layout_width="@dimen/large_button_width"
        android:layout_height="@dimen/large_button_height"
        android:text="XYZ Reader"
        android:id="@+id/btn_xyz"
        android:layout_below="@+id/btn_buildit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>

    <Button
        android:background="@color/accent"
        android:textColor="@color/primary_text_default_material_dark"
        android:layout_width="@dimen/large_button_width"
        android:layout_height="@dimen/large_button_height"
        android:text="Capstone: My Own App"
        android:id="@+id/btn_capstone"
        android:layout_below="@+id/btn_xyz"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>
</RelativeLayout>
