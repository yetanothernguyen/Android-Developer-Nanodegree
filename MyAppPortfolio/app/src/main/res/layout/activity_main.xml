<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/nanodegree_apps"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>



        <Button
            android:background="@color/primary"
            android:textColor="@color/primary_text_default_material_dark"
            android:layout_width="@dimen/large_button_width"
            android:layout_height="@dimen/large_button_height"
            android:text="@string/spotify_app"
            android:id="@+id/btn_spotify"
            android:layout_marginTop="24dp"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"/>

        <Button
            android:background="@color/primary"
            android:textColor="@color/primary_text_default_material_dark"
            android:layout_width="@dimen/large_button_width"
            android:layout_height="@dimen/large_button_height"
            android:text="@string/scores_app"
            android:id="@+id/btn_scores"
            android:layout_below="@+id/btn_spotify"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"/>

        <Button
            android:background="@color/primary"
            android:textColor="@color/primary_text_default_material_dark"
            android:layout_width="@dimen/large_button_width"
            android:layout_height="@dimen/large_button_height"
            android:text="@string/library_app"
            android:id="@+id/btn_library"
            android:layout_below="@+id/btn_scores"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"/>

        <Button
            android:background="@color/primary"
            android:textColor="@color/primary_text_default_material_dark"
            android:layout_width="@dimen/large_button_width"
            android:layout_height="@dimen/large_button_height"
            android:text="@string/build_it_bigger_app"
            android:id="@+id/btn_buildit"
            android:layout_below="@+id/btn_library"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"/>

        <Button
            android:background="@color/primary"
            android:textColor="@color/primary_text_default_material_dark"
            android:layout_width="@dimen/large_button_width"
            android:layout_height="@dimen/large_button_height"
            android:text="@string/xyz_reader_app"
            android:id="@+id/btn_xyz"
            android:layout_below="@+id/btn_buildit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"/>

        <Button
            android:background="@color/accent"
            android:textColor="@color/primary_text_default_material_dark"
            android:layout_width="@dimen/large_button_width"
            android:layout_height="@dimen/large_button_height"
            android:text="@string/capstone_app"
            android:id="@+id/btn_capstone"
            android:layout_below="@+id/btn_xyz"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"/>
    </RelativeLayout>


</ScrollView>
